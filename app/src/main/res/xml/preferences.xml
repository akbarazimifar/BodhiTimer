<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        a:title="@string/sound"
        app:iconSpaceReserved="false" />

    <ListPreference
        a:key="NotificationUri"
        a:title="@string/notification_sound"
        a:summary="@string/notification_sound_desc"
        app:iconSpaceReserved="false" />
    <Preference
        a:title="@string/play_sound"
        a:summary="@string/play_sound_desc"
        a:key="playSound"
        app:iconSpaceReserved="false" />


    <ListPreference
        a:key="PreSoundUri"
        a:title="@string/pre_sound"
        a:summary="@string/pre_sound_desc"
        app:iconSpaceReserved="false" />
    <Preference
        a:title="@string/play_pre_sound"
        a:summary="@string/play_pre_sound_desc"
        a:key="playPreSound"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        a:key="tone_volume"
        a:title="@string/volume"
        a:summary="@string/volume_desc"
        a:max="100"
        a:defaultValue="90"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true" />

    <SeekBarPreference
        a:key="preparationTime"
        a:title="@string/preparation_time"
        a:summary="@string/preparation_time_desc"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true"
        a:max="120" />

    <CheckBoxPreference
        a:key="doNotDisturb"
        a:title="@string/do_not_disturb"
        a:summary="@string/do_not_disturb_desc"
        a:defaultValue="false"
        app:iconSpaceReserved="false" />


    <PreferenceCategory
        a:title="@string/notification"
        app:iconSpaceReserved="false" />

    <CheckBoxPreference
        a:key="showAlwaysNotifications"
        a:title="@string/notification_always"
        a:summary="@string/notification_always_desc"
        a:defaultValue="false"
        app:iconSpaceReserved="false" />



    <CheckBoxPreference
        a:key="useOldNotification"
        a:title="@string/use_old_notification"
        a:summary="@string/use_old_notification_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />

    <Preference
        a:key="showSystemSettings"
        a:title="@string/show_system_settings"
        a:summary="@string/show_system_settings_desc"
        app:iconSpaceReserved="false" />

    <PreferenceCategory
        a:title="@string/visual"
        app:iconSpaceReserved="false" />

    <ListPreference
        a:defaultValue="@string/setting_key.theme_day_night"
        a:entries="@array/themeNames"
        a:entryValues="@array/themeValues"
        a:key="@string/setting_key.theme"
        a:title="@string/settings.theme_title"
        app:iconSpaceReserved="false"/>

    <Preference
        a:title="@string/bmp_or_circle"
        a:key="DrawingIndex"
        a:defaultValue="1"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:title="@string/custom_bmp"
        a:key="custom_bmp"
        app:iconSpaceReserved="false"
        a:enabled="false" />
    <ListPreference
        a:title="@string/circle_theme"
        a:summary="@string/circle_theme_desc"
        a:key="CircleTheme"
        a:entries="@array/themes"
        a:defaultValue="3"
        a:entryValues="@array/circleThemeValues"
        app:iconSpaceReserved="false" />

    <CheckBoxPreference
        a:key="FULLSCREEN"
        a:title="@string/fullscreen"
        a:summary="@string/fullscreen_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:key="hideTime"
        a:title="@string/hide_time"
        a:summary="@string/hide_time_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:title="@string/invert_colors"
        a:key="invert_colors"
        app:iconSpaceReserved="false" />
    <PreferenceCategory
        a:title="@string/misc"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:key="AutoRestart"
        a:title="@string/auto_restart"
        a:summary="@string/auto_restart_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:key="SwitchTimeMode"
        a:title="@string/switch_time"
        a:summary="@string/switch_time_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:key="SpeakTime"
        a:title="@string/speak_time"
        a:summary="@string/speak_time_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />
    <CheckBoxPreference
        a:key="WakeLock"
        a:title="@string/stay_awake"
        a:summary="@string/stay_awake_desc"
        a:defaultValue="False"
        app:iconSpaceReserved="false" />
    <Preference
        a:title="@string/about"
        a:summary="@string/about_desc"
        a:key="aboutPref"
        app:iconSpaceReserved="false" />

</androidx.preference.PreferenceScreen>
