<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="?attr/colorSurface"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="invisible"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/hour_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/H"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="17sp" />

                <Gallery
                    android:id="@+id/gallery_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:spacing="6dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/min_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_min"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/M"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="17sp" />

                <Gallery
                    android:id="@+id/gallery_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:spacing="6dp"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sec_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/S"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="17sp" />

                <Gallery
                    android:id="@+id/gallery_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:spacing="6dp"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/pre_button_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/pre1"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#DDDDDD"
                    android:contentDescription="@null" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/pre2"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#DDDDDD"
                    android:contentDescription="@null" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/pre3"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#DDDDDD"
                    android:contentDescription="@null"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/pre4"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#DDDDDD"
                    android:contentDescription="@null" />

                <Button
                    android:id="@+id/btnadv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/adv"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:contentDescription="@null" />

            <LinearLayout
                android:id="@+id/button_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="#00000000"
                    android:text="@android:string/cancel"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#DDDDDD"
                    android:contentDescription="@null" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="#00000000"
                    android:text="@android:string/ok"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
