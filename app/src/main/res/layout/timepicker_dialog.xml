<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#151515"
    android:visibility="invisible">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/themeOverlay_timePicker"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/pre_button_cont"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:text="@string/pre1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:background="#DDDDDD" />

        <Button
            android:id="@+id/btn2"
            android:text="@string/pre2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:layout_gravity="center_vertical"
            android:background="#DDDDDD" />

        <Button
            android:id="@+id/btn3"
            android:text="@string/pre3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:background="#DDDDDD"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn4"
            android:visibility="gone"
            android:text="@string/pre4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:background="#DDDDDD" />

        <Button
            android:id="@+id/btnadv"
            android:text="@string/adv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@null"
        android:background="#DDDDDD" />

    <LinearLayout
        android:id="@+id/button_cont"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:text="@android:string/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:background="#DDDDDD" />

        <Button
            android:id="@+id/btnOk"
            android:text="@android:string/ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>